<resources>
    
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>
    
    <style name="AppDefault" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:dialogTheme">@style/AppDialog</item>
        <item name="android:actionModeStyle">@style/AppActionMode</item>
    </style>

    <style name="AppDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="AppActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="android:actionModeCloseDrawable">@mipmap/ic_check</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
    </style>
    
    <style name="TweetAction" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:background">@color/tweet_cardview_background</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:checked">false</item>
    </style>

    <style name="TweetActionContainer">
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TweetCountTextView">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>